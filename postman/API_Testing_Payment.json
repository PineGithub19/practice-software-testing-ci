          "listen": "test",
          "script": {
            "exec": [
              "// Lấy status code\r",
              "pm.test(\"Status code is valid\", function () {\r",
              "    pm.expect([200, 400]).to.include(pm.response.code);\r",
              "});\r",
              "\r",
              "// Parse JSON response (nếu hợp lệ)\r",
              "let jsonData;\r",
              "try {\r",
              "    jsonData = pm.response.json();\r",
              "} catch (e) {\r",
              "    jsonData = {};\r",
              "    console.warn(\"Response is not valid JSON:\", pm.response.text());\r",
              "}\r",
              "\r",
              "// Case 1: Payment thành công\r",
              "if (pm.response.code === 200) {\r",
              "    pm.test(\"Response contains success message\", function () {\r",
              "        pm.expect(jsonData).to.have.property(\"message\");\r",
              "        pm.expect(jsonData.message).to.eql(\"Payment was successful\");\r",
              "    });\r",
              "}\r",
              "\r",
              "// Case 2: Lỗi do method rỗng\r",
              "if (pm.response.code === 400) {\r",
              "    pm.test(\"Response contains error message about blank method\", function () {\r",
              "        pm.expect(jsonData).to.have.property(\"error\");\r",
              "        pm.expect(jsonData.error.toLowerCase()).to.include(\"method\");\r",
              "    });\r",
              "}\r",
              ""
            ],
